; ============================================================
; 主题资源定义
; ============================================================
[resource]
default_font_size = 16

; --- Button ---
Button/styles/normal = SubResource("button_normal")
Button/styles/hover = SubResource("button_hover")
Button/styles/pressed = SubResource("button_pressed")
Button/styles/disabled = SubResource("button_disabled")
Button/styles/focus = SubResource("button_focus")
Button/colors/font_color = Color(0.918, 0.902, 1.0, 1)
Button/colors/font_hover_color = Color(1, 1, 1, 1)
Button/colors/font_pressed_color = Color(0.616, 0.435, 1.0, 1)
Button/colors/font_disabled_color = Color(0.42, 0.4, 0.54, 0.5)
Button/colors/font_focus_color = Color(1, 1, 1, 1)
Button/font_sizes/font_size = 18

; --- PanelContainer ---
PanelContainer/styles/panel = SubResource("panel_dark")

; --- Label ---
Label/colors/font_color = Color(0.918, 0.902, 1.0, 1)
Label/font_sizes/font_size = 16

; --- ProgressBar ---
ProgressBar/styles/background = SubResource("progress_bar_bg")
ProgressBar/styles/fill = SubResource("progress_bar_fill")

; --- HSlider ---
HSlider/styles/slider = SubResource("hslider_bg")
HSlider/styles/grabber_area = SubResource("hslider_fill")

; --- Tooltip ---
TooltipPanel/styles/panel = SubResource("tooltip_panel")
TooltipLabel/colors/font_color = Color(0.918, 0.902, 1.0, 1)
TooltipLabel/font_sizes/font_size = 12

; --- LineEdit ---
LineEdit/styles/normal = SubResource("line_edit_normal")
LineEdit/styles/focus = SubResource("line_edit_focus")
LineEdit/colors/font_color = Color(0.918, 0.902, 1.0, 1)
LineEdit/colors/caret_color = Color(0.616, 0.435, 1.0, 1)
LineEdit/colors/selection_color = Color(0.616, 0.435, 1.0, 0.3)

; --- TabContainer ---
TabContainer/styles/tab_selected = SubResource("tab_selected")
TabContainer/styles/tab_unselected = SubResource("tab_unselected")
TabContainer/styles/tab_hovered = SubResource("tab_hover")
TabContainer/styles/panel = SubResource("panel_dark")
TabContainer/colors/font_selected_color = Color(1, 1, 1, 1)
TabContainer/colors/font_unselected_color = Color(0.627, 0.596, 0.784, 0.7)
TabContainer/colors/font_hovered_color = Color(0.918, 0.902, 1.0, 1)
TabContainer/font_sizes/font_size = 18

; --- CheckBox ---
CheckBox/colors/font_color = Color(0.918, 0.902, 1.0, 1)
CheckBox/colors/font_hover_color = Color(1, 1, 1, 1)
CheckBox/font_sizes/font_size = 16

; --- OptionButton ---
OptionButton/styles/normal = SubResource("option_normal")
OptionButton/styles/hover = SubResource("option_hover")
OptionButton/styles/pressed = SubResource("button_pressed")
OptionButton/styles/disabled = SubResource("button_disabled")
OptionButton/styles/focus = SubResource("button_focus")
